<% border =
  case assigns[:form].errors[assigns[:atom]] != nil do
    true -> "k-b--error"
    false -> "k-b--input"
  end %>
<div class="mb4">
  <%= label assigns[:form], assigns[:atom], class: "dib mw-100 mb2 fw4" %>
  <%= textarea assigns[:form], assigns[:atom], placeholder: assigns[:placeholder], class: "k-bg-input k-dark-grey no-placeholder pa3 ba #{border} br2 w-100 outline-0 lato" %>
  <%= error_tag assigns[:form], assigns[:atom] %>
</div>

<!--
assigns:
form,
atom,
placeholder
-->
