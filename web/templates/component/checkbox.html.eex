<div class="form-group">
  <%= label assigns[:form], assigns[:atom], assigns[:label], class: "control-label" %>
  <%= if assigns[:link] do %>
    <%= link assigns[:link_name], to: assigns[:link] %>
  <% end %>
  <%= checkbox assigns[:form], assigns[:atom], class: "form-control" %>
  <%= error_tag assigns[:form], assigns[:atom] %>
</div>

<!--
assigns:
form,
atom,
label,
link_name (optional),
link (optional)
-->
