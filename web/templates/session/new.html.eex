<div class="tc">
  <img src="/images/logo-blue.png" class="w4-5"/>
</div>
<div class="mw6 m-auto pl4 pr4">
  <%= form_for @conn, session_path(@conn, :create), [as: :session], fn f -> %>

    <%= component "input.html",
    form: f,
    image_name: "user",
    atom: :email,
    placeholder: "example@email.com"
    %>
    <%= component "input.html",
    form: f,
    image_name: "locked",
    atom: :password,
    placeholder: "Must contain at least 6 characters"
    %>

    <%= component "submit_button.html", title: "Log in" %>
  <% end %>
</div>
<div class="pa4 tc">
  <%= component "divider.html", divider: true %>
  <h4 class="mt5">New to Karma?</h4>
  <%= link "Create an account", to: user_path(@conn, :new), class: "karma-dark-indigo underline" %>
</div>
